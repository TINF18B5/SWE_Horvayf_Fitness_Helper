<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:id="@+id/text_view_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_view_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/text_view_user_id"
            android:maxLines="1"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/text_view_user_id"
            android:ellipsize="end"/>



        <TextView
            android:id="@+id/text_view_user_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_view_user_name"
            android:text="Gewicht: "
            android:layout_toStartOf="@id/text_view_user_id"
            android:layout_toLeftOf="@id/text_view_user_id"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_user_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_view_user_weight"
            android:text="Größe: "
            android:layout_toStartOf="@id/text_view_user_id"
            android:layout_toLeftOf="@id/text_view_user_id"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_user_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_view_user_height"
            android:text="Geschlecht"
            android:layout_toStartOf="@id/text_view_user_id"
            android:layout_toLeftOf="@id/text_view_user_id"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_user_bmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_view_user_sex"
            android:text="BMI: "
            android:layout_toStartOf="@id/text_view_user_id"
            android:layout_toLeftOf="@id/text_view_user_id"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_user_bmi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_view_user_bmi"
            android:text="BMI Bewertung: "
            android:layout_toStartOf="@id/text_view_user_id"
            android:layout_toLeftOf="@id/text_view_user_id"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>