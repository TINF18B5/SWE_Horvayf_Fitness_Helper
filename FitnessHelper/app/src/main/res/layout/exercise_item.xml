<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:maxLines="1"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"/>



        <TextView
            android:id="@+id/text_view_exercise_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_view_exercise_name"
            android:text="Beschreibung: "
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/text_view_exercise_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_view_exercise_description"
            android:text="Art der Ãœbung: "
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/imageView_exercise"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/img_cardio"
            android:layout_below="@id/text_view_exercise_description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>