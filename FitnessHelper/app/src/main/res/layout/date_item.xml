<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:id="@+id/text_view_calendar_entry_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_view_calendar_entry_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/text_view_calendar_entry_id"
            android:maxLines="1"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/text_view_calendar_entry_id"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_calendar_entry_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_view_calendar_entry_name"
            android:text="Beschreibung"
            android:layout_toStartOf="@id/text_view_calendar_entry_id"
            android:layout_toLeftOf="@id/text_view_calendar_entry_id"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_calendar_entry_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_view_calendar_entry_description"
            android:text="Gewicht: 50 KG "
            android:layout_toStartOf="@id/text_view_calendar_entry_id"
            android:layout_toLeftOf="@id/text_view_calendar_entry_id"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_calendar_entry_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_view_calendar_entry_weight"
            android:text="Kalorien: 2000 Kcal "
            android:layout_toStartOf="@id/text_view_calendar_entry_id"
            android:layout_toLeftOf="@id/text_view_calendar_entry_id"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_calendar_entry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_view_calendar_entry_calories"
            android:text="Datum: 25 Juli 2020"
            android:layout_toStartOf="@id/text_view_calendar_entry_id"
            android:layout_toLeftOf="@id/text_view_calendar_entry_id"
            android:layout_alignParentLeft="true"
            android:ellipsize="end" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>